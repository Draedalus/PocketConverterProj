<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
	
	<!--  Decimal Text Field -->
	<EditText
	    android:id="@+id/dec_field"
	    android:layout_width="319dp"
	    android:layout_height="wrap_content"
	    android:hint="@string/dec_field" />
	
	<!-- Binary Text Field -->
	<EditText android:id="@+id/bin_field"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:hint="@string/bin_field"
        android:layout_weight="1" />
	
	<!-- Hexidecimal Text Field -->
	<EditText android:id="@+id/hex_field"
        android:layout_width="319dp"
    	tools:context=".MainActivity" 
		android:orientation="horizontal" />
		
	<!--  TextField for user input in decimal form -->
	<EditText android:id="@+id/decimal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/hex_field"
        android:layout_weight="1" />
	
	<!-- Octal Text Field -->
	<EditText android:id="@+id/oct_field"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:hint="@string/oct_field"
        android:layout_weight="1" />
	

	<!-- Unworking Button -->
	<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_send"
        android:onClick="sendMessage" />
	
</LinearLayout>
